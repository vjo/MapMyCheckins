		<script type="text/javascript">
			var checkins = new Array();

			function initialize() {
			  var mapOptions = {
			    zoom: 2,
			    center: new google.maps.LatLng(48.853, 2.376),
			    mapTypeId: google.maps.MapTypeId.ROADMAP
			  }
			  var map = new google.maps.Map(document.getElementById("map_canvas"), mapOptions);
				
				var markers = parseJSON(map);
				var markerClusterer = new MarkerClusterer(map, markers, { maxZoom: 8 });
			}

		  function parseJSON(map) {
		  	var db = SpahQL.db(<%= @venues %>);
				var items = db.select("/response/venues/items/*");
				var tab = items.values();
				var markers = [];

				for(i=0; i<items.length; i++) {
					// old hack
					//checkins[i] = [tab[i].venue.name, tab[i].venue.location.lat, tab[i].venue.location.lng, tab[i].beenHere];
					var marker = new google.maps.Marker({
		        position: new google.maps.LatLng(tab[i].venue.location.lat, tab[i].venue.location.lng),
		        map: map,
			      title: tab[i].venue.name
			    });

					var infoBubble = new InfoBubble({
          	content: tab[i].venue.name
          });
					//infoBubble.open(map, marker);
					google.maps.event.addListener(marker, 'click', function() {
          	if (!infoBubble.isOpen()) {
            	infoBubble.open(map, marker);
          	}
          });

					markers.push(marker);
				}

				return markers;
			}	
		</script>
